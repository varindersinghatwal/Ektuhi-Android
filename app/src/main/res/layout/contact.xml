<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    
    <TextView 
        android:id="@+id/txt_cnt1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#FFFF"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#f9a61a"/>
    <TextView
        android:id="@+id/txt_cnt2"
        android:layout_below="@id/txt_cnt1" 
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="#f9a61a"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/txt_cnt2"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/txt_cnt1"
        android:background="#80000000" >
     
        <TextView 
            android:id="@+id/cnt_t1"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text="ਆਪ ਜੀ ਦੇ ਸੁਝਾਵਾਂ ਦੀ ਉਡੀਕ ਵਿਚ : ਸਤਪਾਲ ਸਿੰਘ ਪੁਰੇਵਾਲ, ਸਿਆਟਲ, ਵਾਸ਼ਿੰਗਟਨ।  ਫ਼ੋਨ ਨੰਬਰ :- 206-271-0420" />
       
    </RelativeLayout>

</RelativeLayout>